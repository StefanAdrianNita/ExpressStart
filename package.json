{
  "name": "expressstart",
  "version": "1.0.0",
  "description": "An express BE boilerplate tailored for semplicity and efficiency",
  "main": "build/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"Clearing previous build...\" && rm -rf ./build && echo \"Building... \" && npx tsc",
    "dev": "echo \"Starting dev enviroment...\" && concurrently \"tsc --watch\" \"nodemon -q build/app.ts\""
  },
  "author": "Stefan Adrian Nita",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.3",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
}
